#include <iostream>
using namespace std;

int main() //利用指针将数组元素重置为0
{
	int num[5]{ 2,5,3,4,4 };
	
	int* e = &num[5];
	for (int* p = num; p != e; ++p)
	{
		cout << *p << "\t";
		*p = 0;
		cout << *p << endl;
	}
}

int main() //比较两组数
{
	int a[5] = { 1,5,35,53,15 };
	int b[5] = { 1,5,6,4,7 };
	for (int c = 0; c <= 4; ++c)
	{
		if (a[c] == b[c])
		{
			continue;
		}
		else
			cout << "两数组不等" << endl;
		break;
	}
}

